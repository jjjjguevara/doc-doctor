{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://doc-doctor.dev/schemas/frontmatter.json",
    "title": "J-Editorial Frontmatter Schema",
    "description": "Schema for document frontmatter following J-Editorial L1 properties",
    "type": "object",
    "properties": {
        "uid": {
            "type": "string",
            "description": "Unique identifier for the document"
        },
        "title": {
            "type": "string",
            "description": "Document title"
        },
        "created": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp (ISO 8601)"
        },
        "modified": {
            "type": "string",
            "format": "date-time",
            "description": "Last modification timestamp (ISO 8601)"
        },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags/categories"
        },
        "aliases": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Alternative names/titles"
        },
        "refinement": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Refinement score (0.0-1.0)"
        },
        "origin": {
            "type": "string",
            "enum": [
                "question ",
                "requirement",
                "insight",
                "dialogue",
                "curiosity",
                "derivative",
                "experimental"
            ],
            "description": "Creation driver"
        },
        "form": {
            "type": "string",
            "enum": [
                "transient",
                "developing",
                "stable",
                "evergreen",
                "canonical"
            ],
            "description": "Permanence intent/lifecycle stage"
        },
        "audience": {
            "type": "string",
            "enum": ["personal", "internal", "trusted", "public"],
            "description": "Target audience"
        },
        "stubs": {
            "type": "array",
            "items": { "$ref": "#/definitions/stub" },
            "description": "List of stubs (gaps, todos, issues)"
        }
    },
    "definitions": {
        "stub": {
            "type": "object",
            "required": ["type", "description"],
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Stub type (e.g., link, expand, fix)"
                },
                "description": {
                    "type": "string",
                    "description": "Description of what's needed"
                },
                "stub_form": {
                    "type": "string",
                    "enum": [
                        "transient",
                        "persistent",
                        "blocking",
                        "structural"
                    ],
                    "default": "transient"
                },
                "priority": {
                    "type": "string",
                    "enum": ["low", "medium", "high", "critical"],
                    "default": "low"
                },
                "anchor": {
                    "type": "string",
                    "description": "Block anchor ID"
                }
            }
        }
    }
}
